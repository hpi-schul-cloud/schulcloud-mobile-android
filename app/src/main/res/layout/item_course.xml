<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.graphics.Color" />
        <import type="org.schulcloud.mobile.controllers.main.CourseListAdapter.CourseViewHolder" />

        <variable
            name="course"
            type="org.schulcloud.mobile.models.course.Course" />
        <variable
            name="onSelected"
            type="kotlin.jvm.functions.Function1" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{() -> onSelected.invoke(course.id)}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@{Color.parseColor(course.color)}"
                tools:background="@color/brand_primary" />

            <TextView
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="@{course.name}"
                tools:text="Course Title" />

            <TextView
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="@{CourseViewHolder.teachersToShort(course.teachers)}"
                tools:text="Course Teacher" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>
