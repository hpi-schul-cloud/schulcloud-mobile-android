<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homework_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="end">

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start">

                <TextView
                    android:id="@+id/homework_course_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="7dp"
                    android:paddingRight="7dp"
                    android:layout_marginEnd="@dimen/circle_course_color_diameter"
                    android:layout_marginRight="@dimen/circle_course_color_diameter"
                    android:textSize="16sp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="COURSE"/>

                <ImageView
                    android:id="@+id/homework_course_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_toEndOf="@id/homework_course_title"
                    android:layout_toRightOf="@id/homework_course_title"
                    android:paddingTop="1dp"
                    android:src="@drawable/circle_course_color"
                    app:layout_constraintStart_toEndOf="@+id/homework_course_title"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <!-- TODO: make flag icon density dependent-->
            <TextView
                android:id="@+id/homework_dueTill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:drawableStart="@drawable/baseline_outlined_flag_black_18dp"
                android:drawableLeft="@drawable/baseline_outlined_flag_black_18dp"
                android:drawablePadding="4dp"
                android:drawableTint="@color/red"
                android:textColor="@color/red"
                android:textSize="16sp"
                tools:text="In x Stunden fÃ¤llig" />

        </LinearLayout>

        <TextView
            android:id="@+id/homework_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="start"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_medium_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Homework Title" />

        <TextView
            android:id="@+id/homework_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:textSize="@dimen/text_medium_size"
            tools:text="Description" />


    </LinearLayout>

</android.support.v7.widget.CardView>