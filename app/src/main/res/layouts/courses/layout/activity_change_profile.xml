<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/settings_profile_view"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

        <TextView
            style="@style/Content_Title.Margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/settings_profile"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">


            <TextView
                style="@style/Material.ListItem_TextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_gender"
                android:textSize="17sp"
                android:layout_marginTop="20dp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="6dp"
                android:id="@+id/change_profile_gender_spinner" />

            <TextView
                style="@style/Material.ListItem_TextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_email"
                android:textSize="17sp"
                android:layout_marginTop="20dp"/>

            <EditText
                style="@style/Material.ListItem_TextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/change_profile_email_EditText"
                android:layout_marginTop="20dp"/>

            <TextView
                style="@style/Material.ListItem_TextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_password"
                android:textSize="17sp"
                android:layout_marginTop="20dp"/>

            <EditText
                style="@style/Material.ListItem_TextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/change_profile_password_editText"
                android:layout_marginTop="20dp"
                android:hint="@string/settings_password_hint"
                android:inputType="textPassword"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/change_profile_oldPasswordInfoLayout"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/change_profile_oldPasswordEmpty"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/hpiRed"
                    android:text="@string/settings_old_password_empty"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/change_profile_add_if_not_in_demo_mode"
                android:orientation="vertical">
                <TextView
                    style="@style/Material.ListItem_TextPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_newPassword"
                    android:textSize="17sp"
                    android:layout_marginTop="20dp"/>

                <EditText
                    style="@style/Material.ListItem_TextPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/change_profile_newPassword_editText"
                    android:layout_marginTop="20dp"
                    android:hint=""
                    android:inputType="textPassword"/>

                <TextView
                    style="@style/Material.ListItem_TextPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_newPassword"
                    android:textSize="17sp"
                    android:layout_marginTop="20dp"/>

                <EditText
                    style="@style/Material.ListItem_TextPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/change_profile_newPasswordRepeat_editText"
                    android:layout_marginTop="20dp"
                    android:hint=""
                    android:inputType="textPassword"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/passwordInfoLayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/settings_passwords_doNotMatch"
                        android:textColor="@color/hpiRed"
                        android:id="@+id/change_profile_passwordsDoNotMatch"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/settings_passwordControlFailed"
                        android:textColor="@color/hpiRed"
                        android:id="@+id/change_profile_passwordControlFailed"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/settings_passwordTooShort"
                        android:textColor="@color/hpiRed"
                        android:id="@+id/change_profile_passwordTooShort"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/settings_passwordNeedsNumbers"
                        android:textColor="@color/hpiRed"
                        android:id="@+id/change_profile_passwordNeedsNumbers"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/settings_passwordOkay"
                        android:textColor="@color/green_light"
                        android:id="@+id/change_profile_passwordOkay"/>

                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_submit"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:id="@+id/change_profile_submit"
                    style="@style/Widget.AppCompat.Button.Colored"/>
            </LinearLayout>

        </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>