<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PasswordRecovery.PasswordRecovery">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        android:padding="20dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/recovery_password_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/recovery_title"
            android:textColor="@color/hpiRed"
            android:layout_marginBottom="20dp"
            android:textSize="28dp" />


        <EditText
            android:id="@+id/recovery_input_emailUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/recovery_name_hint"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/recovery_code_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:hint="@string/recovery_hint_code"
            />

        <EditText
            android:id="@+id/recovery_pw_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="@string/recovery_hint_pw"
            />

        <EditText
            android:id="@+id/recovery_pw_input_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="@string/recovery_hint_pw_repeat"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/recovery_error_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:ems="20"
                android:gravity="left"
                android:inputType="textMultiLine"
                android:lines="4"
                android:maxLines="4"
                android:singleLine="false"
                android:textColor="@color/hpiRed"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_recovery_input_confirm"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:padding="16dp"
                android:text="@string/recovery_btn_confirm" />

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>