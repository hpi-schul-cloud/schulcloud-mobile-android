<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".ui.PasswordRecovery.PasswordRecovery">

        <TextView
            android:id="@+id/recovery_password_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/recovery_title"
            android:textColor="@color/hpiRed"
            android:textSize="28dp" />

        <EditText
            android:id="@+id/recovery_input_emailUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/recovery_name_hint"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/recovery_code_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/recovery_hint_code"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/recovery_pw_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/recovery_hint_pw"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/recovery_pw_input_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/recovery_hint_pw_repeat"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/recovery_error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:lines="4"
            android:maxLines="4"
            android:textColor="@color/hpiRed"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_recovery_input_confirm"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/recovery_btn_confirm" />

    </LinearLayout>

</ScrollView>
