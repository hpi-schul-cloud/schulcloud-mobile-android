<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/content_text_card"
        style="@style/Material.Card.Margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/content_tv_title"
                style="@style/Card.Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/content_title_margin"
                android:visibility="gone"
                tools:text="Content name"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/content_tv_notSupported"
                style="@style/Content_Text.Empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/courses_content_error_notSupported"
                android:visibility="gone" />

            <WebView
                android:id="@+id/content_wv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/content_resources_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_resource" />

</FrameLayout>
