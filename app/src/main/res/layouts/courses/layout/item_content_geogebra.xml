<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentGeogebra_cl_wrapper"
    style="@style/SchulCloud.Content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/contentGeogebra_tv_title"
        style="@style/SchulCloud.Content_Header.WithLink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/contentGeogebra_iv_open"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Geogebra title" />

    <ImageView
        android:id="@+id/contentGeogebra_iv_open"
        style="@style/SchulCloud.Content_LinkExternal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/contentGeogebra_tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/contentGeogebra_tv_title" />

    <android.support.constraint.Barrier
        android:id="@+id/contentGeogebra_b_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="contentGeogebra_tv_title,contentGeogebra_iv_open" />

    <ImageView
        android:id="@+id/contentGeogebra_iv_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contentGeogebra_b_header"
        tools:layout_height="192dp" />

</android.support.constraint.ConstraintLayout>
