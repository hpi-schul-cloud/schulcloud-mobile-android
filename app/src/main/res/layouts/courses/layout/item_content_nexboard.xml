<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentNexboard_cl_wrapper"
    style="@style/SchulCloud.Content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/contentNexboard_tv_title"
        style="@style/SchulCloud.Content_Header.WithLink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/contentNexboard_iv_open"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nexboard title" />

    <ImageView
        android:id="@+id/contentNexboard_iv_open"
        style="@style/SchulCloud.Content_LinkExternal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/contentNexboard_tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/contentNexboard_tv_title" />

    <TextView
        android:id="@+id/contentNexboard_tv_description"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/contentNexboard_tv_title"
        tools:text="Description...\n\n\nspanning\nmultiple\nlines"
        tools:visibility="visible" />

    <WebView
        android:id="@+id/contentNexboard_wv_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,4:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contentNexboard_tv_description"
        app:layout_goneMarginTop="0dp"
        tools:ignore="WebViewLayout" />

</android.support.constraint.ConstraintLayout>
