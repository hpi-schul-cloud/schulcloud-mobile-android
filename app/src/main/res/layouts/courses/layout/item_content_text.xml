<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentText_ll_wrapper"
    style="@style/SchulCloud.Content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/contentText_tv_title"
        style="@style/SchulCloud.Content_Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/content_title_margin"
        android:visibility="gone"
        tools:text="Content name"
        tools:visibility="visible" />

    <org.schulcloud.mobile.ui.common.ContentWebView
        android:id="@+id/contentText_cwv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        tools:ignore="WebViewLayout" />

</LinearLayout>
