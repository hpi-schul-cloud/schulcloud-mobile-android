<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    style="@style/Material.Card.Margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:contentPadding="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/file_item_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="false"
            android:textSize="@dimen/fa_icon_big"
            app:fontAwesomeIcon="fa_file" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="@dimen/text_body"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/file_item_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Datei" />

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/file_atv_download"
            style="@style/Material.Icon.Dense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            app:fontAwesomeIcon="fa_download"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/file_iv_overflow"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/text_name" />

        <ImageView
            android:id="@+id/file_iv_overflow"
            style="@style/Material.Icon.Dense"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/file_atv_download"
            android:layout_toStartOf="@id/file_atv_download"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/file_atv_download"
            app:srcCompat="@drawable/ic_more_vert_dark_24dp"
            tools:visibility="visible" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
