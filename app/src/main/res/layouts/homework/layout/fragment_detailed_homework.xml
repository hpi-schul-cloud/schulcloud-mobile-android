<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/homeworkDetailed_tv_name"
        style="@style/Content_Title.Margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="HomeworkName" />

    <ScrollView
        android:id="@+id/homeworkScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.constraint.ConstraintLayout
            style="@style/Content.Padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Wrapper is required, otherwise the WebView doesn't expand -->
            <FrameLayout
                android:id="@+id/homeworkDetailed_fl_descriptionWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <org.schulcloud.mobile.ui.common.ContentWebView
                    android:id="@+id/homeworkDetailed_cwv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    tools:ignore="WebViewLayout"
                    tools:text="Homework description\n\nmultiline" />
            </FrameLayout>

            <TextView
                android:id="@+id/homeworkDetailed_tv_due"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_colon_space"
                android:layout_marginRight="@dimen/text_colon_space"
                android:layout_marginTop="10dp"
                android:text="@string/homework_homework_due"
                app:layout_constraintTop_toBottomOf="@+id/homeworkDetailed_fl_descriptionWrapper" />

            <RelativeLayout
                android:id="@+id/nonPrivate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/homeworkDetailed_tv_due"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/gradeSector"
                    style="@style/Content_Title.MarginTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/homework_homework_grading" />

                <TextView
                    android:id="@+id/gradePart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gradeSector"
                    android:layout_marginEnd="@dimen/text_colon_space"
                    android:layout_marginRight="@dimen/text_colon_space"
                    android:text="@string/homework_homework_grade" />

                <TextView
                    android:id="@+id/grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gradeSector"
                    android:layout_toEndOf="@id/gradePart"
                    android:layout_toRightOf="@id/gradePart"
                    tools:text="1-" />

                <TextView
                    android:id="@+id/gradeComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gradePart"
                    tools:text="Grade comment" />

                <TextView
                    android:id="@+id/comments"
                    style="@style/Content_Title.MarginTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gradeComment"
                    android:text="@string/homework_homework_comments" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/comments"
                    android:clipToPadding="false"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/item_comment" />

            </RelativeLayout>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</LinearLayout>
