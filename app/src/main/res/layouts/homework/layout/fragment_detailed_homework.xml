<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeworkScroll"
    style="@style/Content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        style="@style/Content.Padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/homeworkDetailed_v_color"
            style="@style/Content_Title.Margin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/hpiRed"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/homeworkDetailed_tv_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/homeworkDetailed_tv_name"
            app:layout_constraintVertical_bias="0.75"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/homeworkDetailed_tv_name"
            style="@style/Content_Title.Margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/homeworkDetailed_v_color"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="[Kurs] Hausaufgabe" />

        <TextView
            android:id="@+id/homeworkDetailed_tv_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/text_colon_space"
            android:layout_marginRight="@dimen/text_colon_space"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:text="@string/homework_homework_dates"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/homeworkDetailed_tv_name" />

        <!-- Wrapper is required, otherwise the WebView doesn't expand -->
        <FrameLayout
            android:id="@+id/homeworkDetailed_fl_descriptionWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/homeworkDetailed_tv_dates">
            <org.schulcloud.mobile.ui.common.ContentWebView
                android:id="@+id/homeworkDetailed_cwv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                tools:ignore="WebViewLayout"
                tools:text="Homework description\n\nmultiline" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/nonPrivate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/homeworkDetailed_fl_descriptionWrapper"
            tools:visibility="visible">

            <TextView
                style="@style/Content_Title.MarginTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/homework_homework_grading" />

            <TextView
                android:id="@+id/homeworkDetailed_tv_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:text="Du hast 95% richtig gelÃ¶st."
                tools:visibility="visible" />

            <org.schulcloud.mobile.ui.common.ContentWebView
                android:id="@+id/homeworkDetailed_cwv_gradeComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />


            <TextView
                android:id="@+id/comments"
                style="@style/Content_Title.MarginTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/homework_homework_comments" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/comments"
                android:clipToPadding="false"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:scrollbars="vertical"
                tools:listitem="@layout/item_comment" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</ScrollView>
