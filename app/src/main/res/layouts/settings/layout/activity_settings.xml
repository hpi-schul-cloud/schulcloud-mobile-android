<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.settings.SettingsActivity">

    <include layout="@layout/action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray"
        android:clipToPadding="false">

        <LinearLayout
            style="@style/Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Calendar -->
            <LinearLayout
                android:id="@+id/calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/settings_calendar"
                    style="@style/Content_Title.Margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_calendar_title" />

                <Switch
                    android:id="@+id/switch_calendar"
                    style="@style/Material.ListItem.Simple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_calendar_sync"
                    android:textColorLink="@color/hpiRed" />

            </LinearLayout>

            <!-- Notifications -->
            <LinearLayout
                android:id="@+id/notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/settings_notifications"
                    style="@style/Content_Title.Margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_notifications_title" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/btn_create_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/settings_notifications_registerDevice"
                    app:bootstrapSize="lg"
                    app:buttonMode="regular"
                    app:roundedCorners="true"
                    app:showOutline="false" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/devices_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/item_device" />

            </LinearLayout>

            <!-- About -->
            <TextView
                android:id="@+id/settings_about"
                style="@style/Content_Title.Margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_about_title" />

            <LinearLayout
                android:id="@+id/settings_about_contributors"
                style="@style/Preference_Wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/Preference_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_about_contributors" />

            </LinearLayout>

            <org.schulcloud.mobile.ui.layouts.ListItemLayout
                android:id="@+id/about_github"
                style="@style/ListItemPreference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/Material.ListItem_TextPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_about_openSource" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_position="endIcon"
                    app:srcCompat="@drawable/ic_open_in_new_dark_24dp" />

            </org.schulcloud.mobile.ui.layouts.ListItemLayout>

            <org.schulcloud.mobile.ui.layouts.ListItemLayout
                android:id="@+id/about_contact"
                style="@style/ListItemPreference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/Material.ListItem_TextPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_about_contact" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_position="endIcon"
                    app:srcCompat="@drawable/ic_open_in_new_dark_24dp" />

            </org.schulcloud.mobile.ui.layouts.ListItemLayout>

            <org.schulcloud.mobile.ui.layouts.ListItemLayout
                android:id="@+id/about_imprint"
                style="@style/ListItemPreference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/Material.ListItem_TextPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_about_imprint" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_position="endIcon"
                    app:srcCompat="@drawable/ic_open_in_new_dark_24dp" />

            </org.schulcloud.mobile.ui.layouts.ListItemLayout>

            <org.schulcloud.mobile.ui.layouts.ListItemLayout
                android:id="@+id/about_privacyPolicy"
                style="@style/ListItemPreference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/Material.ListItem_TextPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_about_privacyPolicy" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_position="endIcon"
                    app:srcCompat="@drawable/ic_open_in_new_dark_24dp" />

            </org.schulcloud.mobile.ui.layouts.ListItemLayout>
            <TextView
                style="@style/Content_Title.Margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/settings_profile"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/settings_profile_view"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    style="@style/Content_Title.Margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/settings_profile"
                    android:layout_marginTop="20dp"/>

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">

                    <TextView
                        style="@style/Material.ListItem_TextPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_name"
                        android:textSize="17sp"
                        android:layout_marginTop="20dp"/>

                    <EditText
                        style="@style/Material.ListItem_TextPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/settings_name_EditText"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        style="@style/Material.ListItem_TextPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_last_name"
                        android:textSize="17sp"
                        android:layout_marginTop="20dp"/>

                    <EditText
                        style="@style/Material.ListItem_TextPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/settings_last_name_EditText"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        style="@style/Material.ListItem_TextPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_gender"
                        android:textSize="17sp"
                        android:layout_marginTop="20dp"/>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="6dp"
                        android:id="@+id/settings_gender_spinner" />

                    <TextView
                        style="@style/Material.ListItem_TextPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_email"
                        android:textSize="17sp"
                        android:layout_marginTop="20dp"/>

                    <EditText
                        style="@style/Material.ListItem_TextPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/settings_email_EditText"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        style="@style/Material.ListItem_TextPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_password"
                        android:textSize="17sp"
                        android:layout_marginTop="20dp"/>

                    <EditText
                        style="@style/Material.ListItem_TextPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/settings_password_editText"
                        android:layout_marginTop="20dp"
                        android:hint="@string/settings_password_hint"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/settings_add_if_not_in_demo_mode"
                        android:orientation="vertical">
                        <TextView
                            style="@style/Material.ListItem_TextPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_newPassword"
                            android:textSize="17sp"
                            android:layout_marginTop="20dp"/>

                        <EditText
                            style="@style/Material.ListItem_TextPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/settings_newPassword_editText"
                            android:layout_marginTop="20dp"
                            android:hint=""/>

                        <TextView
                            style="@style/Material.ListItem_TextPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_newPassword"
                            android:textSize="17sp"
                            android:layout_marginTop="20dp"/>

                        <EditText
                            style="@style/Material.ListItem_TextPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/settings_newPasswordRepeat_editText"
                            android:layout_marginTop="20dp"
                            android:hint=""/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_submit"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            android:id="@+id/settings_submit"
                            style="@style/Widget.AppCompat.Button.Colored"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
