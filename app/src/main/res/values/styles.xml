<resources>

    <style name="LoginTextInput" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textColorHint">@color/text_main</item>
        <item name="android:textSize">20sp</item>
        <!--<item name="android:textSize">20sp</item>-->
        <item name="colorAccent">@color/brand_primary</item>
        <item name="colorControlNormal">@color/text_main</item>
        <item name="colorControlActivated">@color/brand_primary</item>
    </style>
    <style name="Animation.Activity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>


    <style name="Content_Text.Empty" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Content_Header" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Content_Header.WithLink">
        <item name="android:minHeight">40dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="drawableEnd">@drawable/ic_open_in_new_dark_24dp</item>
    </style>
    <style name="Content_Subhead" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    <style name="Content_LinkExternal">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="srcCompat">@drawable/ic_open_in_new_dark_24dp</item>
    </style>

    <style name="ContentExternal">
        <item name="android:layout_height">300dp</item>
        <item name="android:scrollbars">none</item>
    </style>


    <style name="FileOverview.Card" parent="Material.Card.Margin">
        <item name="contentPadding">0dp</item>
        <item name="contentPaddingBottom">4dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
    <style name="FileOverview.Card_Icon" parent="Material.Icon.Dense.Inverse">
        <item name="android:width">40dp</item>
    </style>
    <style name="FileOverview.Card_Title" parent="TextAppearance.AppCompat.Title.Inverse" />
    <style name="FileOverview.Card_FileCount" parent="TextAppearance.AppCompat.Subhead.Inverse" />
    <style name="FileOverview.Card_Description" parent="TextAppearance.AppCompat.Medium" />
    <style name="FileOverview.Card_Open" parent="Widget.AppCompat.Button.Borderless.Colored" />

</resources>
