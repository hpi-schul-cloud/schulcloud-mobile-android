<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hpiRed</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/hpiRed</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.TranslucentStatus" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LoginTextInput" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textColorHint">@color/text_main</item>
        <item name="android:textSize">20sp</item>
        <!--<item name="android:textSize">20sp</item>-->
        <item name="colorAccent">@color/apptheme_main</item>
        <item name="colorControlNormal">@color/text_main</item>
        <item name="colorControlActivated">@color/apptheme_main</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_main</item>
    </style>

    <style name="Content_Header" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Content_Text.Empty" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Material.ListItem.Simple" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:height">@dimen/material_listItem_height</item>
        <item name="android:paddingLeft">@dimen/material_listItem_paddingHorizontal</item>
        <item name="android:paddingRight">@dimen/material_listItem_paddingHorizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/material_listItem_textPrimary_textSize</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
