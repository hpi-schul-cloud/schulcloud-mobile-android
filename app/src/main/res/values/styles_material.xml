<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget" />
    <style name="Widget.Material" />

    <!-- Card -->
    <style name="Widget.Material.Card">
        <item name="contentPadding">@dimen/material_card_padding</item>
    </style>
    <style name="Widget.Material.Card.MarginVertical">
        <item name="android:layout_marginTop">@dimen/material_card_marginVertical</item>
        <item name="android:layout_marginBottom">@dimen/material_card_marginVertical</item>
    </style>
    <style name="Widget.Material.Card.Margin" parent="Widget.Material.Card.MarginVertical">
        <item name="android:layout_marginLeft">@dimen/material_card_marginHorizontal</item>
        <item name="android:layout_marginRight">@dimen/material_card_marginHorizontal</item>
    </style>

    <!-- Icon -->
    <style name="Widget.Material.Icon">
        <item name="android:width">48dp</item>
        <item name="android:height">48dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
        <item name="android:color">?colorOnBackgroundSecondary</item>
    </style>
    <style name="Widget.Material.Icon.Inverse">
        <item name="android:color">?colorOnPrimarySecondary</item>
    </style>
    <style name="Widget.Material.Icon.Dense">
        <item name="android:width">40dp</item>
        <item name="android:height">40dp</item>
        <item name="android:textSize" tools:ignore="SpUsage">18dp</item>
    </style>
    <style name="Widget.Material.Icon.Dense.Inverse">
        <item name="android:color">?colorOnPrimarySecondary</item>
    </style>

    <!-- List -->
    <style name="Widget.Material.List">
        <item name="android:paddingTop">@dimen/material_list_paddingVertical</item>
        <item name="android:paddingBottom">@dimen/material_list_paddingVertical</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:showDividers">beginning|middle|end</item>
        <item name="android:divider">@drawable/divider</item>
    </style>
    <style name="Widget.Material.ListHeader" parent="Widget.Material.ListItem.Simple">
        <item name="android:background">@null</item>
        <item name="android:textAppearance">?textAppearanceSubtitle2</item>
    </style>
    <style name="Widget.Material.ListItem">
        <item name="android:height">@dimen/material_listItem_height</item>
        <item name="android:background">?colorSurface</item>
    </style>
    <style name="Widget.Material.ListItem.TwoLine">
        <item name="android:layout_height">@dimen/material_listItem_height_twoLine</item>
    </style>
    <style name="Widget.Material.ListItem.Simple">
        <item name="android:paddingLeft">@dimen/material_listItem_paddingHorizontal</item>
        <item name="android:paddingRight">@dimen/material_listItem_paddingHorizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?textAppearanceSubtitle1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Widget.Material.ListItem.TextPrimary" parent="">
        <item name="android:layout_marginLeft">@dimen/material_listItem_icon_textSpacing</item>
        <item name="android:layout_marginRight">@dimen/material_listItem_icon_textSpacing</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?textAppearanceSubtitle1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Widget.Material.ListItem.TextSecondary" parent="">
        <item name="android:layout_marginLeft">@dimen/material_listItem_icon_textSpacing</item>
        <item name="android:layout_marginRight">@dimen/material_listItem_icon_textSpacing</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Material.ListItem_Icon" parent="Widget.Material.Icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

</resources>
